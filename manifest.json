{
  "manifest_version": 3,
  "name": "Record Steps",
  "version": "1.0",
  "description": "Records clicks, keyboard actions and timing for aiding automation",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  }
}
