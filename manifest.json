{
  "manifest_version": 3,
  "name": "Record Steps",
  "version": "1.0",
  "description": "Records clicks, keyboard actions and timing for aiding automation",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}
